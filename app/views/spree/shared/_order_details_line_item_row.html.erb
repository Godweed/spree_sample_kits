<tr data-hook="order_details_line_item_row">
  <td data-hook="order_item_image">
    <% if item.variant.images.length == 0 %>
      <%= link_to sq_small_image(item.variant.product), item.variant.product %>
    <% else %>
      <%= link_to image_tag(item.variant.images.first.attachment.url(:sq_small)), item.variant.product %>
    <% end %>
  </td>
  <td data-hook="order_item_description">
    <h4><%= item.variant.is_sample? ? item.variant.name + " (SAMPLE)" : item.variant.name %></h4>
    <%= "(" + item.variant.options_text + ")" unless item.variant.option_values.empty? %>
  </td>
  <td data-hook="order_item_price" class="lead text-primary price"><span><%= item.single_money.to_html %></span></td>
  <td data-hook="order_item_qty" class="lead text-primary order-qty"><%= item.quantity %></td>
  <td data-hook="order_item_total" class="lead text-primary total"><span><%= item.display_amount.to_html %></span></td>
</tr>
